#!/bin/sh

keyPath="$HOME/Documents/personal/keys"
token=$(cat $keyPath | awk -F '=' '/tg/ {print $2}')
chatId="792380932"
textMessage="\"$1\""

curl -X POST \
  -H 'Content-Type: application/json' \
  -d '{"chat_id":'"$chatId"', "text": '"$textMessage"', "parse_mode": "markdown"}' \
  "https://api.telegram.org/bot$token/sendMessage"
