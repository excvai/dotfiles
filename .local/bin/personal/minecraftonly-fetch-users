#!/bin/sh

httpUrl="https://minecraftonly.ru/"
serverName="$1"
usersAmount=$(curl -s "$httpUrl" | grep --after-context=1 "<span>$serverName</span>" | grep -o -P "(?<=<label><b><font color='#FD8D20'>).*(?=</font></b> в игре</label>)")
echo "Number of users: $usersAmount"

if [ $usersAmount -gt 5 ]
then
  tg-notify-send "Server is active!"
fi
